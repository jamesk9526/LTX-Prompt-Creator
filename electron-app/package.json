{
  "name": "ltx-prompter-electron",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "cross-env NODE_ENV=development electron .",
    "dev:electron": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "dist": "npm run build && electron-builder",
    "lint": "next lint"
  },
  "dependencies": {
    "electron": "29.4.0",
    "next": "14.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "22.7.4",
    "@types/react": "18.3.8",
    "@types/react-dom": "18.3.0",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "electron-builder": "24.13.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "wait-on": "7.2.0"
  }
}
